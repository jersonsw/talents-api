{
  "name": "talents-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "infra:up": "docker-compose up -d talents-keycloak-db talents-keycloak talents-db && npm run wait-on-db && npm run migration:run && npm run wait-on-keycloak && npm run keycloak:seed",
    "infra:stop": "docker-compose down",
    "infra:down": "docker-compose down -v",
    "wait-on-db": "wait-on tcp:localhost:5433 --timeout 60000",
    "wait-on-keycloak": "wait-on http://localhost:8080/realms/master/.well-known/openid-configuration --timeout 60000",
    "keycloak:seed": "KC_HOSTNAME=localhost ts-node src/scripts/keycloak-setup.ts",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint \"{src,libs,test}/**/*.ts\" --fix --cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d src/main/commons/config/typeorm.config.ts",
    "migration:new": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/adapters/data/migrations/migration_$npm_config_name",
    "migration:run": "npm run build && npm run typeorm -- migration:run",
    "migration:show": "npm run build && npm run typeorm -- migration:show",
    "migration:revert": "npm run build && npm run typeorm -- migration:revert",
    "migration:revert:all": "npm run build && ts-node -r tsconfig-paths/register src/adapters/data/commons/rollback-all.ts",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/main/commons/config/typeorm.config.ts",
    "seed:create": "typeorm-extension seed:create -d src/main/commons/config/typeorm.config.ts",
    "db:cleanup": "ts-node -r tsconfig-paths/register src/adapters/data/commons/forced-rollback-all.ts",
    "db:reset": "npm run migration:revert:all && npm run migration:run && npm run seed:run",
    "prepare": "husky"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^24.0.1",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/terminus": "^9.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.2.1",
    "@types/uuid": "^9.0.6",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "file-type": "^19.1.1",
    "keycloak-connect": "^22.0.5",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.5.1",
    "uuid": "^9.0.1",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.10",
    "@types/jest": "28.1.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^16.11.10",
    "@types/passport-jwt": "^3.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "factory.ts": "^1.4.1",
    "husky": "^9.0.11",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.5.4",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
